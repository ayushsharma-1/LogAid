# LogAid Configuration - Comprehensive AI-Powered CLI Assistant

# ================================
# AI PROVIDER CONFIGURATION
# ================================
# Primary AI provider for generating command suggestions
AI_PROVIDER=gemini
GEMINI_API_KEY=AIzaSyAkA_IdOZZCiT9NQ85ccmzVKMU-jB2-QTc
GEMINI_MODEL=gemini-2.0-flash-exp

# Alternative AI Providers (uncomment to use)
# AI_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o

# AI Request Configuration
AI_REQUEST_TIMEOUT=15
MAX_AI_RETRIES=3
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=500

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FILE=~/.logaid/logs/logaid.log
ENABLE_DEBUG_LOGS=false
LOG_ROTATION=true
MAX_LOG_SIZE=10MB
MAX_LOG_FILES=5

# ================================
# PLUGIN CONFIGURATION
# ================================
PLUGINS_DIR=~/.logaid/plugins
ENABLE_PLUGINS=apt,npm,git,docker,pip,systemctl,yarn,cargo,make,ssh
PLUGIN_TIMEOUT=5

# Plugin-specific settings
APT_SEARCH_SUGGESTIONS=true
APT_ENABLE_BACKPORTS=false
GIT_AUTO_CORRECT=true
GIT_SUGGEST_ALIASES=true
DOCKER_HUB_SEARCH=true
DOCKER_SUGGEST_TAGS=true
NPM_SUGGEST_ALTERNATIVES=true
PIP_SUGGEST_VERSIONS=true

# ================================
# USER INTERFACE CONFIGURATION
# ================================
ENABLE_COLORS=true
ENABLE_ASCII_LOGO=true
AUTO_CONFIRM=false
SUGGESTION_TIMEOUT=30
MAX_SUGGESTIONS=5
SHOW_CONFIDENCE_SCORE=true
ENABLE_SOUND_ALERTS=false

# Colors (ANSI codes)
COLOR_ERROR=red
COLOR_SUGGESTION=cyan
COLOR_SUCCESS=green
COLOR_WARNING=yellow

# ================================
# HISTORY & CACHING
# ================================
HISTORY_FILE=~/.logaid/history.json
MAX_HISTORY_ENTRIES=10000
ENABLE_HISTORY_SEARCH=true
CACHE_SUGGESTIONS=true
CACHE_DURATION=3600
CACHE_DIR=~/.logaid/cache

# ================================
# SECURITY & SAFETY
# ================================
DANGEROUS_COMMANDS_CHECK=true
REQUIRE_SUDO_CONFIRMATION=true
SANDBOX_MODE=false
WHITELIST_COMMANDS=false
BLACKLIST_COMMANDS=rm -rf /,dd if=

# ================================
# PERFORMANCE SETTINGS
# ================================
PTY_BUFFER_SIZE=8192
CONCURRENT_PLUGINS=true
ENABLE_ASYNC_AI=true
MEMORY_LIMIT=256MB

# ================================
# DEVELOPMENT & TESTING
# ================================
DEBUG_MODE=false
TEST_MODE=false
MOCK_AI_RESPONSES=false
ENABLE_TELEMETRY=false
TELEMETRY_ENDPOINT=https://api.logaid.ayushsharma.site/telemetry

# Testing Configuration
TEST_DATA_DIR=./testdata
INTEGRATION_TEST_TIMEOUT=60
E2E_TEST_CONTAINERS=true
